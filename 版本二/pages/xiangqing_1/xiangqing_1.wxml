<!--pages/xiangqing_1/xiangqing_1.wxml-->
<view style="height: 100%;width: 100%;background-color: #f4f4f4;">
  <view class="user_info_wrap">
    <view class="user_img_wrap">
      <image class="user_bg" src="{{pic}}"></image>
      <view class="user_info" >
        <image class="user_icon" src="{{pic}}" bindtap="tiaozhuan"></image>
        <view class="user_name">{{name}}</view>
        <view style="color: rgb(255, 255, 255); font-size: 30px;">发布者</view>
      </view>
    </view>
    </view>
    </view>
    <view style="background-color: #e6e6e6; border-radius: 50rpx;margin-top: 2px" >
    <view style="font-size:15px; text-align: center;">商品信息</view>
    <view style="width:100%;height: 10vh;margin-top:1rpx;">{{itemone.info}}</view>
    <view style="height: 4vh;"></view>
</view>

<view style="background-color: #e6e6e6; border-radius: 50rpx; margin-top: 2px;">
    <view style="font-size:15px; text-align: center;">其他信息</view>
    <view style="margin-left: 2vw; font-size: 15px;display: flex;margin-top: 10px;">
        <text style="width: 25%;">卖主称谓 :</text>
        <view  style="width: 75%;">{{itemone.name}}</view>
    </view>

    <view style="margin-left: 2vw; font-size: 15px;display: flex; margin-top: 10px;">
        <text style="width: 25%;">联系方式 :</text>
        <view  style="width: 75%;">{{itemone.contact}}</view>
    </view>

    <view style="margin-left: 2vw; font-size: 15px;display: flex; margin-top: 10px;">
        <text style="width: 25%;">价格 :</text>
        <view style="width: 75%;" >{{itemone.value}}</view>
    </view>
</view>
<view style="background-color: #e6e6e6; border-radius: 50rpx; margin-top: 2px;align-items: center;">
    <view style="font-size:15px; text-align: center;">照片</view>
    <image src="{{itemone.url}}" style="width:100%"></image>
</view>