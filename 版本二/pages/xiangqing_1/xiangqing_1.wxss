/* pages/xiangqing_1/xiangqing_1.wxss */
.event
  {
    width: 100%;
    height:10%;
    display: flex;
    flex-direction: row;
    border-radius: 5px;
    text-align: center;
    align-items: center;
    position:fixed;
    top:5%;
  }
  .user_info_wrap {
    height: 550rpx;
    overflow: hidden;
    background-color: rgb(18, 118, 248);
    position: relative;
  }
  .user_info_wrap .user_img_wrap {
    position: relative;
  }
  .user_info_wrap .user_img_wrap .user_bg {
    height: 50vh;
    filter: blur(10rpx);
    width: 100%;
  }
  .user_info_wrap .user_img_wrap .user_info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;
    text-align: center;
  }
  .user_info_wrap .user_img_wrap .user_info .user_icon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
  }
  .user_info_wrap .user_img_wrap .user_info .user_name {
    color: #fff;
    margin-top: 40rpx;
    font-family: FZShuTi;
  }
  .user_info_wrap .user_btn {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 40%;
    border: 1rpx solid rgb(18, 118, 248);
    color: rgb(18, 118, 248);
    font-size: 38rpx;
    padding: 30rpx;
    border-radius: 10rpx;
  }